CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(NAME)

%.o : %.c
	$(CC) $(CFLAGS) -o $@ -c $<

$(NAME) : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean :
	$(RM) -rf ~* $(NAME)

oclean :
	$(RM) -rf $(OBJ)

fclean : clean oclean

re : oclean all
